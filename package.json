{
  "name": "websheetjs",
  "version": "1.0.0",
  "description": "Render website sections with lazy-loaded data from Google Spreadsheets",
  "scripts": {
    "watch:ts": "npx tsc --watch",
    "watch:bundler": "npx watchify build_tmp/index.js --standalone websheet -o build_tmp/websheet.js",
    "serve": "npx snowpack dev",
    "test": "jest",
    "build:bundle": "npx browserify --standalone websheet -o build_tmp/websheet.js build_tmp/index.js",
    "build": "npm test && npx tsc && npm run build:bundle && cp build_tmp/websheet.js dist/websheet.js && npx uglifyjs dist/websheet.js --compress --mangle eval -o dist/websheet.min.js && ls -lh dist/websheet.min.js | awk '{print \">> websheetjs built & minified successfully! (\"$5\")\"}'"
  },
  "author": "Pierre Avinain",
  "license": "ISC",
  "devDependencies": {
    "browserify": "^17.0.0",
    "jest": "^26.6.3",
    "jest-fetch-mock": "^3.0.3",
    "snowpack": "^2.18.5",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3",
    "watchify": "^4.0.0"
  },
  "dependencies": {
    "tsify": "^5.0.2",
    "uglify-es": "^3.3.9"
  },
  "jest": {
    "automock": false,
    "setupFiles": [
      "./test/_setup.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/dist/",
      "/docs/",
      "/node_modules/"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.json"
      }
    }
  }
}
